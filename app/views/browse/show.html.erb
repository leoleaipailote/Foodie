<%= render 'restaurants/rest_info'%>
<%= link_to 'View Menu', customer_menu_path(restaurant_id: @restaurant.id), class: 'btn btn-primary' %>
<h2>Reviews</h2>
<%if !@spec_review.nil?%>
    <div class="review">
    <p><strong>Customer:</strong> <%= @spec_review.customer.name %> </p>
    <p><strong>Rating:</strong> <%= @spec_review.rating %> Stars</p>
    <p><%= @spec_review.comment %></p>
    <p><%= @spec_review.recorded_date %></p>
    <%= link_to 'Edit Review', edit_restaurant_review_path(@restaurant, @spec_review), class: 'btn btn-primary' %>
    
  </div>
<%end%>
<% @reviews.each do |review| %>
  <div class="review">
    <p><strong>Customer:</strong> <%= review.customer.name %> Stars</p>
    <p><strong>Rating:</strong> <%= review.rating %> Stars</p>
    <p><%= review.comment %></p>
    <p><%= review.recorded_date %></p>
    
  </div>
<% end %>
<%= link_to 'Add New Review', new_restaurant_review_path(@restaurant.id), class: 'btn btn-primary' %>
<%= link_to 'View All Reviews', restaurant_reviews_path(@restaurant), class: 'btn btn-primary' %>
